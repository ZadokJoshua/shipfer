<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Shipfer.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:material="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
    xmlns:viewmodel="clr-namespace:Shipfer.ViewModels"
    x:DataType="viewmodel:MainViewModel"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="Modal">
    <ScrollView Margin="10">
        <VerticalStackLayout Spacing="25">
            <VerticalStackLayout>
                <Label FontSize="24" Text="Hello, Demo User!" />
                <Label FontSize="14" Text="Your Location is 123 Main Street Apartment 4B, New York, NY 10001, United States" LineBreakMode="WordWrap" MaxLines="2"/>
            </VerticalStackLayout>
            <StackLayout>
                <Frame BackgroundColor="#e0f7fa" CornerRadius="10" Padding="10">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="20">
                        <StackLayout HorizontalOptions="Center">
                            <Label Text="In Transit" FontSize="18" FontAttributes="Bold" TextColor="#00796b" />
                            <Label Text="5" FontSize="24" FontAttributes="Bold" TextColor="#00796b" HorizontalOptions="Center" />
                        </StackLayout>
                        <StackLayout HorizontalOptions="Center">
                            <Label Text="Delivered" FontSize="18" FontAttributes="Bold" TextColor="#00796b" />
                            <Label Text="10" FontSize="24" FontAttributes="Bold" TextColor="#00796b" HorizontalOptions="Center" />
                        </StackLayout>
                        <StackLayout HorizontalOptions="Center">
                            <Label Text="Pending" FontSize="18" FontAttributes="Bold" TextColor="#00796b" />
                            <Label Text="3" FontSize="24" FontAttributes="Bold" TextColor="#00796b" HorizontalOptions="Center" />
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <VerticalStackLayout Spacing="10">
                <Button Text="Chat with Shipfer" Background="{DynamicResource PrimaryColour}" 
                    CornerRadius="20"
                    Padding="10" TextColor="{DynamicResource SecondaryColour}"/>
                <Grid ColumnDefinitions="*,*" ColumnSpacing="4"> 
                    <Button Text="New Shipment" BackgroundColor="#1abc9c" TextColor="White" CornerRadius="20" Padding="10" Grid.Column="0"/>
                    <Button Text="Schedule Pickup" BackgroundColor="#34495e" TextColor="White" CornerRadius="20" Padding="10" Grid.Column="1"/>
                </Grid>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="4">
                <Label FontSize="Title" Text="Current Shipments"/>
                <BoxView HeightRequest="2" BackgroundColor="#ccc" HorizontalOptions="Fill" Margin="0,5,0,10" />
                <StackLayout>
                    <Label Text="No shipments to display."
                   FontSize="14"
                   TextColor="#666"
                   HorizontalOptions="Center"
                   Margin="20"/>
                    <!-- You can add a ListView or CollectionView here to display shipments -->
                </StackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="4">
                <Label FontSize="Title" Text="Past Shipments"/>
                <BoxView HeightRequest="2" BackgroundColor="#ccc" HorizontalOptions="Fill" Margin="0,5,0,10" />
                <StackLayout>
                    <Label Text="No shipments to display."
       FontSize="14"
       TextColor="#666"
       HorizontalOptions="Center"
       Margin="20"/>
                    <!-- You can add a ListView or CollectionView here to display shipments -->
                </StackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

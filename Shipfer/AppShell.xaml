<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shipfer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Shipfer.Views"
    Title="Shipfer"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Auth" ContentTemplate="{DataTemplate views:AuthPage}" Route="AuthPage" />
    <TabBar>
        <Tab>
            <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
    </TabBar>
</Shell>

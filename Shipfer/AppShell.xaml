<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shipfer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Shipfer.Views"
    Title="Shipfer"
    Shell.TabBarForegroundColor="{DynamicResource PrimaryColour}"
    Shell.TabBarTitleColor="{DynamicResource PrimaryColour}"
    Shell.TabBarUnselectedColor="#CCEBEB"
    Shell.TabBarBackgroundColor="{DynamicResource TertiaryColour}">

    <!--<ShellContent
        Title="Auth"
        ContentTemplate="{DataTemplate views:AuthPage}" 
        Route="AuthPage" />-->
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="home.png"
            Route="MainPage" />
        <ShellContent
            Title="Copilot"
            ContentTemplate="{DataTemplate views:ChatPage}"
            Icon="chatbot.png"
            Route="ChatPage" />
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate views:ProductsPage}"
            Icon="store.png"
            Route="ProductsPage" />
    </TabBar>
</Shell>
